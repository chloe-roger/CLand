<h1>Listing histoires</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Author</th>
    <th>Sphere</th>
    <th>Histoires personnages</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @histoires.each do |histoire| %>
  <tr>
    <td><%= histoire.title %></td>
    <td><%= histoire.description %></td>
    <td><%= histoire.author %></td>
    <td><%= histoire.sphere_id %></td>
    <% if histoire.personnages.count > 0 %>
      <td><ul>
        <% histoire.personnages.each do |personnage| %>
            <li><%= personnage.name %></li>
        <% end %>
      </ul></td>
  <% end %>
    <td><%= link_to 'Show', histoire %></td>
    <td><%= link_to 'Edit', edit_histoire_path(histoire) %></td>
    <td><%= link_to 'Destroy', histoire, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

